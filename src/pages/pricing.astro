---
// Import necessary components
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import PricingCard from "@components/pricing.astro";

// Pricing data
const pricing = [
  {
    name: "Personal",
    price: "Free",
    popular: false,
    features: [
      "Limited number of messages",
      "Community Support",
    ],
    button: {
      text: "Get Started",
      link: "/",
    },
  },
  {
    name: "Gold",
    price: {
      monthly: "$19",
      annual: "$16",
      discount: "10%",
      original: "$24",
    },
    popular: true,
    features: [
      "All Free Features",
      "AI data insight",
      "Advanced Integrations",
      "Priority Support",
    ],
    button: {
      text: "Get Started",
      link: "#",
    },
  },
  {
    name: "Platinum",
    price: "$36",
    popular: false,
    features: [
      "All Pro Features",
      "Newest model",
      "7/7 days Phone Support",
    ],
    button: {
      text: "Contact us",
      link: "/contact",
    },
  },
];
---

<!-- Layout for the Pricing page -->
<Layout title="Pricing">
  <Container>
    <!-- Section header -->
    <Sectionhead>
      <Fragment slot="title">Pricing</Fragment>
      <Fragment slot="desc">
       Find out our services (Coming soon)
      </Fragment>
    </Sectionhead>

    <!-- Pricing cards grid -->
    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-screen-lg mt-12">
      {pricing.map((item) => (
        <PricingCard plan={item} />
      ))}
    </div>
  </Container>
</Layout>
